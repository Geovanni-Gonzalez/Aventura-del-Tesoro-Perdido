<Window x:Class="AventuraGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aventura del Tesoro Perdido"
        Height="450" Width="600"
        Background="#1e1e2e"
        Foreground="White"
        FontFamily="Consolas">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Información del jugador -->
        <TextBlock x:Name="lblInfo"
                   FontSize="14"
                   Margin="0,0,0,10"
                   Text="Jugador: Explorador - Puntos: 0"/>

        <!-- Área de respuesta -->
        <TextBox x:Name="txtResponse"
                 Grid.Row="1"
                 Background="White"
                 BorderThickness="0"
                 Padding="8"
                 FontSize="14"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"/>

        <!-- Entrada de comando -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="txtCommand"
                     Width="400" Height="30"
                     Background="#3e3e4e"
                     BorderThickness="0"
                     Padding="6"
                     FontSize="14"/>
            <Button Content="Enviar"
                    Width="140" Height="30"
                    Margin="10,0,0,0"
                    Background="#007ACC"
                    Foreground="White"
                    Click="BtnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
