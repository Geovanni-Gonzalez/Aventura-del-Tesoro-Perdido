<Window x:Class="Aventura.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aventura del Tesoro Perdido" Width="1100" Height="850"
        WindowStartupLocation="CenterScreen" Background="#121212"
        Closed="Window_Closed">

    <Window.Resources>
        <!-- Modern Button Style with Gradient -->
        <Style x:Key="PremiumButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4A4A6A" Offset="0"/>
                        <GradientStop Color="#2B2B3D" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}" RenderTransformOrigin="0.5,0.5"
                                Effect="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Resources[ShadowEffect]}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#6C6C90"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3030A0"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Glass Panel Style -->
        <Style x:Key="GlassPanel" TargetType="Border">
            <Setter Property="Background" Value="#CC1E1E2F"/> <!-- Semi-transparent -->
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Direction="270" Color="#000" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style (Vibrant Gradient) -->
        <Style x:Key="ActionButtonStyle" BasedOn="{StaticResource PremiumButtonStyle}" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#43A047" Offset="0"/>
                        <GradientStop Color="#1B5E20" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}" RenderTransformOrigin="0.5,0.5"
                                Effect="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Resources[ShadowEffect]}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                         <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4CAF50"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Red Gradient Button -->
        <Style x:Key="DangerButtonStyle" BasedOn="{StaticResource PremiumButtonStyle}" TargetType="Button">
             <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#E53935" Offset="0"/>
                        <GradientStop Color="#B71C1C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
             <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}" RenderTransformOrigin="0.5,0.5"
                                Effect="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Resources[ShadowEffect]}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                         <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EF5350"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#252535"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#252535"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="15" ShadowDepth="4" Direction="315" Color="#000" Opacity="0.4"/>

        <!-- Modern ScrollBar Thumb -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="rectangle" CornerRadius="4" Background="#555" BorderThickness="0"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="rectangle" Property="Background" Value="#777"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="true">
                                <Setter TargetName="rectangle" Property="Background" Value="#999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ScrollBar (Implicit Style) -->
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true">
                            <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsEnabled}">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageUpCommand}" Opacity="0" Focusable="false"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageDownCommand}" Opacity="0" Focusable="false"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Grid with Gradient Background -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F0F1A" Offset="0.0"/>
                <GradientStop Color="#1A1A2E" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource GlassPanel}" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🧭" FontSize="28" Margin="0,0,15,0" VerticalAlignment="Center" Effect="{StaticResource ShadowEffect}"/>
                        <TextBlock x:Name="EstadoTxt" Foreground="#F0F0F0" FontSize="20" FontFamily="Segoe UI" FontWeight="Regular" Text="Jugador: Explorador | Lugar: bosque" VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="2" ShadowDepth="1" Color="Black" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="ONLINE" Foreground="#81C784" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="12"/>
                        <Ellipse x:Name="ConnectionStatusLed" Width="10" Height="10" Fill="#4CAF50" StrokeThickness="0">
                            <Ellipse.Effect>
                                <BlurEffect Radius="2"/>
                            </Ellipse.Effect>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.4" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Control Panel -->
                <Border Grid.Column="0" Style="{StaticResource GlassPanel}" Margin="0,0,20,0" Padding="25">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
                        <StackPanel>
                            <TextBlock Text="Panel de Control" FontFamily="Segoe UI" FontWeight="Light" FontSize="24" Foreground="#FFD700" Margin="0,0,0,25" HorizontalAlignment="Center"/>
                            
                            <!-- Mover -->
                            <TextBlock Text="VIAJAR A" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,5"/>
                            <ComboBox x:Name="CmbMover" Margin="0,0,0,10" DropDownOpened="CmbMover_DropDownOpened" SelectionChanged="CmbMover_SelectionChanged"/>
                            <Button x:Name="BtnMover" Content="Confirmar Viaje" Click="BtnMover_Click" Style="{StaticResource PremiumButtonStyle}" Margin="0,0,0,20"/>

                            <!-- Tomar -->
                            <TextBlock Text="RECOGER" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,5"/>
                            <ComboBox x:Name="CmbTomar" Margin="0,0,0,10" DropDownOpened="CmbTomar_DropDownOpened" SelectionChanged="CmbTomar_SelectionChanged"/>
                            <Button x:Name="BtnTomar" Content="Tomar Objeto" Click="BtnTomar_Click" Style="{StaticResource PremiumButtonStyle}" Margin="0,0,0,20"/>

                            <!-- Usar -->
                            <TextBlock Text="USAR ITEM" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,5"/>
                            <ComboBox x:Name="CmbUsar" Margin="0,0,0,10" DropDownOpened="CmbUsar_DropDownOpened" SelectionChanged="CmbUsar_SelectionChanged"/>
                            <Button x:Name="BtnUsar" Content="Usar Seleccionado" Click="BtnUsar_Click" Style="{StaticResource PremiumButtonStyle}" Margin="0,0,0,25"/>

                            <Separator Background="#444" Margin="10,10,10,20"/>

                            <Button Content="Refrescar Datos" Click="BtnRefrescar_Click" Style="{StaticResource PremiumButtonStyle}" Background="#444" FontSize="12" Height="30" Padding="10,5"/>
                            
                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="🏆 Verificar" Click="BtnVerificarGane_Click" Style="{StaticResource ActionButtonStyle}"/>
                                <Button Grid.Column="2" Content="⚠ Reiniciar" Click="BtnReiniciar_Click" Style="{StaticResource DangerButtonStyle}"/>
                            </Grid>

                            <TextBlock Text="MOCHILA" Foreground="#FFD700" Margin="0,30,0,10" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                            <Border CornerRadius="8" Background="#111" BorderBrush="#333" BorderThickness="1" Padding="5">
                                <ListBox x:Name="LstInventario" Height="120" Background="Transparent" BorderThickness="0" Foreground="#EEE">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="2">
                                                <TextBlock Text="🔹" Margin="0,0,5,0" Opacity="0.7"/>
                                                <TextBlock Text="{Binding}" FontSize="13"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>

                            <Border Margin="0,20,0,0" Background="#111" CornerRadius="8" BorderBrush="#333" BorderThickness="1" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="📜 BITÁCORA" Foreground="#888" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="100">
                                        <TextBlock x:Name="TxtLog" TextWrapping="Wrap" Foreground="#DDD" FontFamily="Consolas" FontSize="11" Text="Esperando acciones..."/>
                                    </ScrollViewer>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Map View -->
                <Border Grid.Column="1" Style="{StaticResource GlassPanel}" Padding="0" ClipToBounds="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Background="#10000000" Padding="15">
                            <TextBlock Text="VISUALIZACIÓN DEL MUNDO" FontSize="14" FontWeight="Bold" Foreground="#88FFFFFF" HorizontalAlignment="Center"/>
                        </Border>
                        
                        <Border Grid.Row="1" Margin="20" Background="#050510" CornerRadius="10" ClipToBounds="True" BorderBrush="#334" BorderThickness="2">
                             <Canvas x:Name="GameCanvas">
                                 <Canvas.Background>
                                     <ImageBrush x:Name="MapBackgroundBrush" Stretch="UniformToFill" Opacity="0.9"/>
                                 </Canvas.Background>
                                 
                                <Image x:Name="PersonajeImg" Width="100" Height="100" Canvas.Left="82" Canvas.Top="200" Source="Assets/Personaje/mario1.png" RenderTransformOrigin="0.5,0.5">
                                    <Image.Effect>
                                        <DropShadowEffect ShadowDepth="10" BlurRadius="10" Direction="270" Opacity="0.6"/>
                                    </Image.Effect>
                                    <Image.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Image.RenderTransform>
                                </Image>
                            </Canvas>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer Actions -->
            <Border Grid.Row="2" Style="{StaticResource GlassPanel}" Padding="15" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="BtnDondeEstoy" Content="🔍 Ubicación" Click="BtnDondeEstoy_Click" Margin="5" Width="130" Style="{StaticResource PremiumButtonStyle}"/>
                    <Button x:Name="BtnQueTengo" Content="🎒 Estado" Click="BtnQueTengo_Click" Margin="5" Width="120" Style="{StaticResource PremiumButtonStyle}"/>
                    <Button x:Name="BtnLugaresVisitados" Content="👣 Historial" Click="BtnLugaresVisitados_Click" Margin="5" Width="120" Style="{StaticResource PremiumButtonStyle}"/>
                    <Button x:Name="BtnComoGano" Content="💡 Pistas" Click="BtnComoGano_Click" Margin="5" Width="100" Style="{StaticResource PremiumButtonStyle}"/>
                    <Button x:Name="BtnAcercaDe" Content="ℹ Info" Click="BtnAcercaDe_Click" Margin="5" Width="100" Style="{StaticResource PremiumButtonStyle}"/>
                    
                    <Rectangle Width="1" Fill="#555" Margin="15,5"/>
                    
                    <StackPanel VerticalAlignment="Center">
                         <TextBlock Text="BUSCADOR" Foreground="#777" FontSize="9" FontWeight="Bold" Margin="0,0,0,2"/>
                         <ComboBox x:Name="CmbDondeEsta" Width="150" DropDownOpened="CmbDondeEsta_DropDownOpened" SelectionChanged="CmbDondeEsta_SelectionChanged" Height="30" FontSize="12"/>
                    </StackPanel>
                    
                    <StackPanel VerticalAlignment="Center" Margin="15,0,0,0">
                         <TextBlock Text="RUTAS" Foreground="#777" FontSize="9" FontWeight="Bold" Margin="0,0,0,2"/>
                         <ComboBox x:Name="CmbPuedoIr" Width="150" DropDownOpened="CmbPuedoIr_DropDownOpened" SelectionChanged="CmbPuedoIr_SelectionChanged" Height="30" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>


