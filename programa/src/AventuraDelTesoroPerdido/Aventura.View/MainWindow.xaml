<Window x:Class="Aventura.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aventura del Tesoro Perdido"
        Width="1000" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">

    <Grid Margin="10">

        <!-- Fondo principal -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#22223B" Offset="0"/>
                <GradientStop Color="#4A4E69" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Área superior: Estado -->
        <Border Background="#2A2A40" CornerRadius="10" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="EstadoTxt"
                           Foreground="White"
                           FontSize="16"
                           Text="Jugador: Explorador | Lugar: bosque | Puntos: 0 | Inventario: ..."
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Contenedor principal -->
        <DockPanel LastChildFill="True" Margin="0,50,0,0">

            <!-- Panel lateral de botones -->
            <Border DockPanel.Dock="Left"
                    Width="180"
                    Margin="0,0,10,0"
                    Background="#2E2E3E"
                    CornerRadius="8"
                    Padding="10">
                <StackPanel>
                    <TextBlock Text="Acciones"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="#FFD700"
                               Margin="0,0,0,10"/>
                    <Button Content="Refrescar"
                            Click="BtnRefrescar_Click"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Margin="0,5,0,0"/>
                    <Button Content="Inventario"
                            Click="BtnInventario_Click"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Margin="0,5,0,0"/>
                    <Button Content="Objetos en Lugar"
                            Click="BtnObjetosLugar_Click"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Margin="0,5,0,0"/>
                    <Button Content="Reiniciar"
                            Click="BtnReiniciar_Click"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Margin="0,5,0,0"
                            Background="#FF4444"
                            Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- Panel del mapa -->
            <!-- Cambia Grid por Border para soportar CornerRadius y Padding -->
            <Border Background="#1F1F2F" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Mapa de la Aventura"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <!-- Área del mapa -->
                    <Canvas Grid.Row="1" Background="#2E2E3E" Height="300">
                        <!-- Imagen del personaje -->
                        <Image x:Name="PersonajeImg"
                               Width="80"
                               Height="80"
                               Canvas.Left="50"
                               Canvas.Top="180"
                               RenderTransformOrigin="0.5,0.5">
               
                            <Image.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Image.RenderTransform>
                        </Image>
                    </Canvas>

                    <!-- Panel de botones de lugares -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0"
                                x:Name="LugarButtonsPanel"/>
                </Grid>
            </Border>
        </DockPanel>
    </Grid>
</Window>
